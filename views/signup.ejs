<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/stylesheets/logo.css">
    <link rel="stylesheet" href="/stylesheets/form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
</head>
<body>
    <!-- Website logo -->
    <div class="header">
        <img src="/images/logo.png" alt="Logo" class="logo">
    </div>

    <!-- Wrapper for the signup form -->
    <div class="center">
        <div class="container">
            <!-- Close button to return to the main page -->
            <a href="/" class="close-btn fas fa-times"></a>
            <div class="text">
                Signup
            </div>

            <!-- Display error messages if there are any issues during signup -->
            <% if (typeof error !== "undefined") { %>
                <p style="color: red; text-align: center;"><%= error %></p>
            <% } %>

            <!-- Signup form -->
            <form action="/signup" method="POST">
                <!-- Input for username -->
                <div class="data">
                    <label>Username</label>
                    <input type="text" name="username" required>
                </div>

                <!-- Input for email address -->
                <div class="data">
                    <label>Email</label>
                    <input type="email" name="email" required>
                </div>

                <!-- Input for password -->
                <div class="data">
                    <label>Password</label>
                    <input type="password" name="password" required>
                </div>

                <!-- Button to submit the signup form -->
                <div class="btn">
                    <div class="inner"></div>
                    <button type="submit">Signup</button>
                </div>

                <!-- Link to login page if the user already has an account -->
                <div class="signup-link">
                    Already have an account? <a href="/login">Login now</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <!-- CSS-filer for logo, skjema og Font Awesome -->
    <link rel="stylesheet" href="/stylesheets/logo.css">
    <link rel="stylesheet" href="/stylesheets/form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <!-- Header med logo -->
    <div class="header">
        <img src="/images/logo.png" alt="Logo" class="logo">
    </div>

    <!-- Login-senter container -->
    <div class="center">
        <div class="container">
            <!-- Lukkeknapp for modal-stil navigasjon -->
            <a href="/" class="close-btn fas fa-times"></a>

            <!-- Tekst for login header -->
            <div class="text">Login</div>

            <!-- Vise feilmelding hvis innlogging mislykkes -->
            <% if (typeof error !== "undefined") { %>
            <p style="color: red; text-align: center;"><%= error %></p>
            <% } %>

            <!-- Skjema for login -->
            <form action="/login" method="POST">
                <!-- Input for e-post eller telefonnummer -->
                <div class="data">
                    <label>Email or Phone</label>
                    <input type="text" name="email" required>
                </div>

                <!-- Input for passord -->
                <div class="data">
                    <label>Password</label>
                    <input type="password" name="password" required>
                </div>

                <!-- Glemt passord-link (kan senere implementeres med funksjonalitet) -->
                <div class="forgot-pass">
                    <a href="#">Forgot Password?</a>
                </div>

                <!-- Login-knapp -->
                <div class="btn">
                    <div class="inner"></div>
                    <button type="submit">LOGIN</button>
                </div>

                <!-- Link til signup-siden -->
                <div class="signup-link">
                    Not a member? <a href="/signup">Signup now</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
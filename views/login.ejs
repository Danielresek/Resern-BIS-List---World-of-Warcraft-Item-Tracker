<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/logo.css">
    <link rel="stylesheet" href="/stylesheets/form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <!-- Header with logo -->
    <div class="header">
        <img src="/images/logo.png" alt="Logo" class="logo">
    </div>

    <!-- Login center container -->
    <div class="center">
        <div class="container">
            <!-- Close button for modal-style navigation -->
            <a href="/" class="close-btn fas fa-times"></a>

            <!-- Login header text -->
            <div class="text">Login</div>

            <!-- Display error message if login fails -->
            <% if (typeof error !== "undefined") { %>
            <p style="color: red; text-align: center;"><%= error %></p>
            <% } %>

            <!-- Login form -->
            <form action="/login" method="POST">
                <!-- Input for email or phone number -->
                <div class="data">
                    <label>Email or Phone</label>
                    <input type="text" name="email" required>
                </div>

                <!-- Input for password -->
                <div class="data">
                    <label>Password</label>
                    <input type="password" name="password" required>
                </div>

                <!-- Forgot password link (functionality can be implemented later) -->
                <div class="forgot-pass">
                    <a href="#">Forgot Password?</a>
                </div>

                <!-- Login button -->
                <div class="btn">
                    <div class="inner"></div>
                    <button type="submit">LOGIN</button>
                </div>

                <!-- Link to signup page -->
                <div class="signup-link">
                    Not a member? <a href="/signup">Signup now</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>